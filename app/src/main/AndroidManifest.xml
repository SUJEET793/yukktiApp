<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.me">

    <application
        android:allowBackup="true"
        android:icon="@drawable/myicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/myicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ForgotPassword"></activity>
        <activity android:name=".login" />
        <activity
            android:name=".Register.profile"
            android:label="@string/title_activity_profile" />
        <activity android:name=".Register.Otp" />
        <activity
            android:name=".Register.register"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".home.Catagories"
            android:parentActivityName=".home.MainActivity" /> <!-- splash Activity -->
        <activity android:name=".home.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- main activity -->
        </activity>
        <activity android:name=".home.MainActivity" />
    </application>

</manifest>