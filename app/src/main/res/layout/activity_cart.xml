<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/cart_toolbar"
        android:background="@color/primaryColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:title="My Cart"
        android:textStyle="bold">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear_text"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_toolbar"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Item name"
            android:textSize="16sp"
            android:paddingLeft="20dp"
            android:textColor="#2B211F"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Qty"
            android:textSize="16sp"
            android:textColor="#2B211F"

            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:paddingEnd="8dp"
            android:textColor="#2B211F"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#322F2F"
        android:id="@+id/view"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:layout_below="@id/linear_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cartRecyclerView"
        android:layout_below="@id/view"/>
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="Cart is empty  \n please select the item" />

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/total_amount_cart"
            android:layout_width="match_parent"
            android:text="Total Price = "
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/fab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/add_button_botder"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:contentDescription="@string/submit"/>
    </LinearLayout>
    </FrameLayout>

</RelativeLayout>